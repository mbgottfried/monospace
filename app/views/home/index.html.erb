<% if current_user %>
	<div class="container top-down">
		<div class="page-header center">
		  <h1>You're In!</h1>
		  <p>It's good to be in the Society.</p>
		</div>
		  <div class="col-md-8">
		  	<div class="panel panel-default">
		  		<div class="panel-heading">
		  			<h2>Member Information</h2>
		  		</div>
		  		<div class="panel-body">
		  			<p><strong>Membership Number: 0000<%= current_user.id %></strong></p>
		  			<p><strong>Member Address</strong><br />
		  				<%= current_user.name %><br />
		  				<%= current_user.street1 %><%= current_user.street2 %><br />		  				
						<%= current_user.city %>, <%= current_user.state %> <%= current_user.zip %></p>
		  		</div>
		  	</div>
		  </div>
		  <div class="col-md-4">
		  <ul class="member-buttons">
		  	<li><%= link_to "Manage Profile", edit_profile_path, class: "btn btn-danger btn-block btn-lg" %></li>
		  	<li><%= link_to "Invite Friends on Facebook", "#", class: "btn btn-primary btn-block btn-lg" %></li>
		  	<li><%= link_to "Invite your Twitter Followers", "#", class: "btn btn-primary btn-block btn-lg" %></li>
		  </ul>
		  </div>
	</div>
	<%= render 'layouts/footer'%>
		<% else %>
		<%= render 'layouts/home'%>
<% end %>
		