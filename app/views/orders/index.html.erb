<div class="container top-down">
  <div class="page-headerrai center">
    <h1>All Orders</h1>
  </div>

  <% @orders.each do |order| %>
      <div class="panel panel-default">
        <div class="panel-body">
          <div class="col-md-2">
            <strong>Order ID: <%= order.id %></strong><br /><br />
            <% if order.status == "Order Placed" %>
              <span style="background: #c0392b; padding: 3px 5px; color: #ffffff;"><%= order.status %></span>
            <% else %>
              <span style="background: #2ecc71; padding: 3px 5px;"><%= order.status %></span>
            <% end %>
          </div>
          <div class="col-md-3">
            <strong><%= order.user.name %></strong><br />
            <%= order.user.email %><br />
            <%= order.user.stripe_id %>
          </div>
          <div class="col-md-3">
            <strong>Shipping Address </strong><br />
            <%= order.user.street1 %><br />
            <% if order.user.street2 = "" %>
            <% else %>
              <%= order.user.street2 %><br />
            <% end %>
            <%= order.user.city %>, <%= order.user.state %> <%= order.user.zip %>
          </div>
          <div class="col-md-2">
            <strong>Order Placed On:</strong><br />
            <%= order.created_at %>
          </div>
          <div class="col-md-2 right">
            <%= link_to "Print Shipping Label", order.label, class: "btn btn-warning", target: "_blank" %><br />
            <% if order.status == "Order Placed" %>
              <br /><%= link_to "Ship Order", ship_order_path(order), class: "btn btn-success" %>
            <% else %>
              <br /><%= link_to "Un-Ship Order", unship_order_path(order), class: "btn btn-danger" %>
            <% end %>
          </div>

      </div>
    </div>

  <% end %>

</div>